{
  "compilerOptions": {
    /* === Pfad-Alias === */
    "baseUrl": "src",               // z. B. @/components/ui → src/components/ui
    "paths": {
      "@/*": ["*"]
    },

    /* === Reaktives Verhalten mit JSX === */
    "jsx": "react",                 // WICHTIG: KEIN "react-jsx" im Outlook-Add-in

    /* === Kompatibilität + Typing === */
    "target": "es5",                // Office.js läuft am besten mit ES5
    "module": "commonjs",           // kein ESNext – klassisch für Webpack
    "lib": ["es2015", "dom"],       // damit moderne APIs + DOM verfügbar sind
    "esModuleInterop": true,
    "allowJs": true,                // JS-Dateien werden unterstützt
    "experimentalDecorators": true,

    /* === Output === */
    "outDir": "lib",
    "sourceMap": true,
    "noEmitOnError": true,

    /* === Sonstiges === */
    "skipLibCheck": true,           // optional: beschleunigt Build
    "forceConsistentCasingInFileNames": true
  },

  "exclude": ["node_modules", "dist", "lib", "lib-amd"],

  "ts-node": {
    "files": true
  }
}
