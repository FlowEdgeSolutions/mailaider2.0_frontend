<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">

  <Id>e391fd03-659c-48fd-a251-46d01d020f2e</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>FlowEdge Solutions</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  <DisplayName DefaultValue="4.0 MailAider AI"/>
  <Description DefaultValue="Intelligenter KI-Assistent für Outlook – Analyse, Bearbeitung, Antwortvorschläge."/>
  <IconUrl DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo180.png"/>
  <SupportUrl DefaultValue="https://flowedge.de/"/>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://khaled-ayub.github.io/MailAider4.0/"/>
  </DefaultSettings>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
                    xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
                    Version="1.0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <ExtensionPoint xsi:type="MessageComposeCommandSurface">
          <OfficeTab id="TabReply">
            <Group id="msgComposeGroup">
              <Label resid="groupLabel"/>
              <Control xsi:type="Button" id="openTaskpaneButton">
                <Label resid="paneButtonLabel"/>
                <Supertip>
                  <Title resid="paneButtonTitle"/>
                  <Description resid="paneButtonDesc"/>
                </Supertip>
                <Icon>
                  <bt:Image size="16" resid="icon16"/>
                  <bt:Image size="32" resid="icon32"/>
                  <bt:Image size="80" resid="icon80"/>
                  <bt:Image size="128" resid="icon128"/>
                </Icon>
                <Action xsi:type="ShowTaskpane">
                  <SourceLocation resid="taskpaneUrl"/>
                </Action>
              </Control>
            </Group>
          </OfficeTab>
        </ExtensionPoint>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo16.png"/>
        <bt:Image id="icon32" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo32.png"/>
        <bt:Image id="icon80" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo80.png"/>
        <bt:Image id="icon128" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo180.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskpaneUrl" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="MailAider"/>
        <bt:String id="paneButtonLabel" DefaultValue="KI öffnen"/>
        <bt:String id="paneButtonTitle" DefaultValue="4.0 MailAider AI"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="paneButtonDesc" DefaultValue="Öffnet den MailAider-KI-Assistenten zur Analyse oder Beantwortung der E-Mail."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
