<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>d9326846-c221-4a8b-94da-cdf8948c397f</Id>
  <Version>1.0.0.6</Version>  <!-- Version erhöht -->
  <ProviderName>FlowEdge Solutions</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>

  <DisplayName DefaultValue="MailAider AI 2.0"/>
  <Description DefaultValue="Intelligenter E-Mail-Assistent mit KI-Unterstützung"/>
  <IconUrl DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo80.png"/>
  <HighResolutionIconUrl DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo80.png"/>
  <SupportUrl DefaultValue="https://flowedge.de"/>

  <AppDomains>
    <AppDomain>https://khaled-ayub.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- KORREKTUR: FormSettings muss VOR Permissions kommen -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://khaled-ayub.github.io/MailAider4.0/"/>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://khaled-ayub.github.io/MailAider4.0/"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteMailbox</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <!-- VersionOverrides korrigiert -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- Lesemodus-Erweiterungspunkt -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Bearbeitungsmodus-Erweiterungspunkt -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/logo80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="MailAider KI"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="MailAider starten"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="KI-gestützte E-Mail-Bearbeitung und intelligente Antwortvorschläge"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
