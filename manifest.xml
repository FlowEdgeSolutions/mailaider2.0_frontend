<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">

  <!-- Basis-Metadaten -->
  <Id>890e7dc3-42b5-4fb5-8ec3-26aee99f0747</Id>
  <Version>1.1.0.0</Version>
  <ProviderName>MailAider</ProviderName>
  <DefaultLocale>de-DE</DefaultLocale>
  <DisplayName DefaultValue="MailAider AI FLE"/>
  <Description DefaultValue="Intelligenter KI-Assistent für Outlook – Analyse, Bearbeitung, Antwortvorschläge."/>
  <IconUrl DefaultValue="https://mailaiderassets.blob.core.windows.net/logos/maillogo80.png"/>
  <HighResolutionIconUrl DefaultValue="https://mailaiderassets.blob.core.windows.net/logos/maillogo80.png"/>
  <SupportUrl DefaultValue="https://ubisoft.rip/support"/>

  <AppDomains>
    <AppDomain>https://khaled-ayub.github.io/MailAider4.0</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Taskpane für Read & Edit -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://khaled-ayub.github.io/MailAider4.0/index.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://khaled-ayub.github.io/MailAider4.0/index.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>

  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <!-- VersionOverrides 1.0 wrapper -->
  <VersionOverrides xsi:type="mailappor:VersionOverridesV1_0">
    <!-- Nested V1.1 -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                      xsi:type="mailappor:VersionOverridesV1_1">

      <!-- Anforderungen -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="mailappor:MailHost">
          <DesktopFormFactor>

            <!-- Read-Mode Button -->
            <ExtensionPoint xsi:type="mailappor:MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  <Control xsi:type="mailappor:Button" id="msgReadOpenPaneButton">
                    <Label resid="ReadPane.Label"/>
                    <Supertip>
                      <Title resid="ReadPane.Label"/>
                      <Description resid="ReadPane.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="mailappor:ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- Compose-Mode mit 2 Buttons -->
            <ExtensionPoint xsi:type="mailappor:MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="GroupLabel"/>

                  <!-- AI-Vorschlag einfügen -->
                  <Control xsi:type="mailappor:Button" id="AIInsertButton">
                    <Label resid="AIInsertButton.Label"/>
                    <Supertip>
                      <Title resid="AIInsertButton.Label"/>
                      <Description resid="AIInsertButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="mailappor:ExecuteFunction">
                      <FunctionName>insertAISuggestion</FunctionName>
                    </Action>
                  </Control>

                  <!-- Einstellungen öffnen -->
                  <Control xsi:type="mailappor:Button" id="SettingsButton">
                    <Label resid="SettingsButton.Label"/>
                    <Supertip>
                      <Title resid="SettingsButton.Label"/>
                      <Description resid="SettingsButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="mailappor:ShowTaskpane">
                      <SourceLocation resid="SettingsPane.Url"/>
                    </Action>
                  </Control>

                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- FunctionFile für ExecuteFunction -->
            <FunctionFile resid="Commands.Url"/>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <!-- Ressourcen -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://mailaiderassets.blob.core.windows.net/logos/logo16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://mailaiderassets.blob.core.windows.net/logos/logo32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://mailaiderassets.blob.core.windows.net/logos/maillogo80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/commands.js"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/index.html"/>
          <bt:Url id="SettingsPane.Url" DefaultValue="https://khaled-ayub.github.io/MailAider4.0/settings.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="MailAider AI"/>
          <bt:String id="ReadPane.Label" DefaultValue="MailAider öffnen"/>
          <bt:String id="AIInsertButton.Label" DefaultValue="AI-Vorschlag einfügen"/>
          <bt:String id="SettingsButton.Label" DefaultValue="Einstellungen"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="ReadPane.Tooltip" DefaultValue="Öffnet MailAider im Lesemodus"/>
          <bt:String id="AIInsertButton.Tooltip" DefaultValue="Fügt einen KI-Textvorschlag ein"/>
          <bt:String id="SettingsButton.Tooltip" DefaultValue="Öffnet die Einstellungen"/>
        </bt:LongStrings>
      </Resources>

    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
